<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/about"
        android:text="About"
        android:textSize="30dp"

        android:gravity="center"
       android:padding="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_below="@+id/about"
        android:id="@+id/ceoimg"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/first"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:id="@+id/ceo"
                android:background="@drawable/mxceo"
                android:layout_height="200dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/ceoname"
        android:layout_below="@+id/ceoimg"
        android:text="CEO:KARAN BEDI"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_below="@+id/ceoname"
        android:id="@+id/managerimg"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/second"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:id="@+id/manager"
                android:background="@drawable/mxmaneger"
                android:layout_height="200dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/managername"
        android:layout_below="@+id/managerimg"
        android:text="MANAGER:VISHAL CHAKKARWAR"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>